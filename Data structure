DROP TABLE documents;
CREATE TABLE documents(
   id serial,
   author text,
   title text,
   tags text,
   area text,
   meta text,
   created_at timestamp with time zone,
   modified_at  timestamp with time zone,
   content text,
   rendered_content text,
   type text,
   parent_id integer,
   author_id integer,
   index_in_parent integer,
   subdoc_refs integer[],
   doc_refs jsonb,
   PRIMARY KEY( id )
);