- if document
  .document{style: 'margin-top:40px;'}
    .row
      .col.left{style: 'width: 30%;'}
        %span= '<a href="http://localhost:2300/documents">Index</a>'
        %span= "<a href='http://localhost:2300/editor/document/#{document.id}'>Edit</a>"
        %h1{style: 'font-size:14pt;'}= document.title
        %p= document.author
        .div= document.document_map
        .div= document.table_of_contents 'html'
      .col.middle{style: 'left: 30%; width: 70%;'}
        = document.compiled_and_rendered_content    # = document.compiled_and_rendered_content
- else
  %p.placeholder Documents not found.

