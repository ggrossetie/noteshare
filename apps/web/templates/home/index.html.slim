  .col.s4.offset-s1.m4.offset-m1.l4.offset-l1
    h3==  domain_link
    div
      .ns_card style='min-height:400px;'
        - if current_user(session)
          p.compact == welcome_link(session)
          br
          p.compact == signout_link
